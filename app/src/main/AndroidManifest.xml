<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sean.note.android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name="com.sean.zq.android.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.sean.zq.android.view.qa.QAActivity" />
        <activity android:name="com.sean.zq.android.view.widget.textview.BarrageActivity" />
        <activity android:name="com.sean.zq.android.view.widget.WidgetActivity" />
        <activity android:name="com.sean.zq.android.view.widget.toolbar.ToolBarActivity" />
        <activity android:name="com.sean.zq.android.view.widget.textview.TextViewActivity" />
        <activity android:name="com.sean.zq.android.view.widget.textview.TextViewDetailActivity" />
        <activity android:name="com.sean.zq.android.view.view.ViewActivity" />
        <activity android:name="com.sean.zq.android.view.view.fragment.FragmentDemoActivity" />
        <activity android:name="com.sean.zq.android.utils.asynctask.MyAsyncTaskLoaderActivity" />
        <activity android:name="com.sean.zq.android.view.view.fragment.FragmentLayout" />
        <activity android:name="com.sean.zq.android.view.view.fragment.FragmentLayout$DetailsActivity" />
        <activity android:name="com.sean.zq.android.view.permission.PermissionActivity" />
        <activity android:name="com.sean.zq.android.view.thread.ThreadActivity" />
        <activity android:name="com.sean.zq.android.utils.asynctask.AsyncTaskLoaderActivity" />
        <activity android:name="com.sean.zq.android.view.view.fragment.FragmentStack" />
        <activity android:name="com.sean.zq.android.view.widget.surfaceview.SurfaceViewActivity" />
        <activity android:name="com.sean.zq.android.view.share.ShareActivity">

            <!-- 处理单张图片的Intent -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>

            <!-- 处理多张图片的Intent -->
            <intent-filter>
                <action android:name="android.intent.action.SEND_MULTIPLE" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>

        <receiver android:name="com.sean.zq.android.view.MBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity android:name="com.sean.zq.android.view.serialize.Serialize1Activity" />
        <activity android:name="com.sean.zq.android.view.serialize.Serialize2Activity"></activity>
    </application>

</manifest>